                            <span class="kanban-span">Assignee: </span>@issue.Assignee
                        </span>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
@section Scripys{
    <script src="@Url.Content("~/Scripts/kanbancards.js")" type="text/javascript"></script>
}