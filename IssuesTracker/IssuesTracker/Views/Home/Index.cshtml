@model List<IssuesTracker.Models.Project>
@{
    ViewBag.Title = "Home Page";
}

<div class="container" style="margin-top: 30px">
    <div class="row">
        <div class="col">
            <label style="font-size: 18px">Choose project name:</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <select id="project-select" style="width: 100%" class="form-control">
                @{
                    int i = 0;
                    foreach (var pr in Model)
                    {
                        if (i == 0)
                        {
                            <option selected value="@pr.Id">@pr.Name</option>
                        }
                        else
                        {
                            <option value="@pr.Id">@pr.Name</option>
                        }
                        i++;
                    }
                }
            </select>
        </div>
    </div>
    <div class="row" style="margin-top: 15px">
        <div class="col">
            <label style="font-size: 18px">Issues list:</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <colgroup>
                    <col span="1" style="width: 10%;" />
                    <col span="1" style="width: 25%;" />
                    <col span="1" style="width: 25%;" />
                    <col span="1" style="width: 10%;" />
                    <col span="1" style="width: 20%;" />
                    <col span="1" style="width: 10%;" />
                </colgroup>
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Summary</th>
                        <th scope="col">Description</th>
                        <th scope="col">Priority</th>
                        <th scope="col">Assignee</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="result"></tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button style="float: right; margin-right: 3em" data-target="#IssueModal" data-toggle="modal" class="btn btn-primary" id="btnCreateIssue">Create</button>
        </div>
    </div>
    <!--Modal-->
    <div class="modal fade" id="IssueModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-lg modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <h3 class="modal-title" style="font-weight: bold" id="exampleModalLongTitle">Edit Issue</h3>
                            </div>
                            <div class="col-md-6">
                                <button type="button" class="close" style="margin-top: 5px" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-1">
                                <button id="btnSave" disabled class="btn btn-primary">Save</button>
                            </div>
                            <div class="col-md-4">
                                <select id="selectType" style="width: 200px" class="form-control">
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label style="visibility: hidden" id="lblProjectId"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-9">
                                <h5 style="font-weight: bold">Project Name:</h5>
                                <input id="inpProjectName" class="form-control"/>
                            </div>
                            <div class="col-md-3">
                                <h5 style="font-weight: bold">Number</h5>
                                <input id="inpId" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h5 style="font-weight: bold">Summary:</h5>
                                <input id="inpSummary" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <h5 style="font-weight: bold">Description:</h5>
                                <textarea id="txtareaDescr" rows="5" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h5 style="font-weight: bold">Assignee:</h5>
                                <input id ="inpAssignee" class="form-control"/>
                            </div>
                            <div class="col-md-6">
                                <h5 style="font-weight: bold">Priority:</h5>
                                <select id="selectPriority" class="form-control">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>        
            </div>
        </div>
    </div>
</div>
@section Scripts {
   <script src="@Url.Content("~/Scripts/index.js")" type="text/javascript"></script>
}
