@model List<IssuesTracker.Models.Project>
@{
    ViewBag.Title = "Home Page";
}

<div class="container" style="margin-top: 30px">
    <div class="row">
        <div class="col">
            <label style="font-size: 18px">Choose project name</label>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <select style="width: 100%" class="form-control project-select">
                @{
                    int i = 0;
                    foreach (var pr in Model)
                    {
                        if (i == 0)
                        {
                            <option selected value="@pr.Id">@pr.Name</option>
                        }
                        else
                        {
                            <option value="@pr.Id">@pr.Name</option>
                        }
                        i++;
                    }
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Summary</th>
                        <th scope="col">Description</th>
                        <th scope="col">Priority</th>
                        <th scope="col">Assignee</th>
                        <th scope="col"></th>                       
                    </tr>
                </thead>
                <tbody class="result">             
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}
