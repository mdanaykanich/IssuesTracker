@model List<string>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top: 5em">
    <div class="row" style="height: 40em">
        <div class="col-md-2"></div>
        <div class="form-group col-md-3" style="border: 1px solid silver; border-radius: 8px; height: 10em">
            <div class="row">
                <label class="form-label" style="margin: 5px 0px 0px 10px; font-size: 16px">
                    Rolename
                </label>
            </div>
            <div class="row-md-8" style="margin: 5px 0px 0px 5px">
                <input id="rolename" class="form-control" type="text" />
            </div>
            <div class="row">
                <button id="addRole" class="btn btn-primary float-right" style="margin-top: 20px; position: absolute; right: 15px">Add</button>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="form-group col-md-3" style="border: 1px solid silver; border-radius: 8px; height: 30em">
            <div class="row">
                <label class="form-label" style="margin: 5px 0px 0px 10px; font-size: 16px">
                    Roles
                </label>
            </div>
            <div class="row-md-8" style="margin: 5px 0px 0px 5px">
                <ul id="roles" class="list-group">
                    @foreach (string roleName in Model)
                    {
                        if (roleName != "--None--")
                        {
                            <li class="list-group-item">@roleName</li>
                        }
                    }
                </ul>
            </div>         
        </div>
    </div>
</div>
@section Scripts {
    <script src="@Url.Content("~/Scripts/app/roles.js")" type="text/javascript"></script>
}